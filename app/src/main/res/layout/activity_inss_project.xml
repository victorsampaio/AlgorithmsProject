<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.com.algorithmsproject.inss.InssProject" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSS"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1- O primeiro algoritmo a ser desenvolvido deve receber como entrada o salário de umempregado e apurar o desconto do INSS, considerando a seguinte tabela:  "
        android:id="@+id/edtSalarioBruto"
        android:layout_toStartOf="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtClassificaDesc"
        android:layout_below="@+id/edtSalarioBruto"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/edtClassificaDesc"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edtSalarioBruto"
        android:src="@drawable/inss"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostre o salário bruto do funcionário, qual a Classificação Desconto, Valor salárioLiquido. "
        android:id="@+id/txvTempCelsius"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/edtClassificaDesc" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solução"
        android:id="@+id/btnSolucao"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
